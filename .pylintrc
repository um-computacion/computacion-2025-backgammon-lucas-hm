[MASTER]
# Agrega el directorio actual al PYTHONPATH para evitar errores de importación
init-hook='import sys; sys.path.append(".")'

# Archivos y carpetas a ignorar (podés ajustar según tu proyecto)
ignore=env,__pycache__,.venv

# Extensiones de archivos que Pylint debe analizar
load-plugins=pylint.extensions.mccabe

[MESSAGES CONTROL]
# Desactiva errores de importación si estás usando rutas relativas o mocks
disable=import-error

[REPORTS]
# Activa los reportes de análisis
reports=yes

[DESIGN]
# Reglas de complejidad y estructura
max-args=5
max-statements=50
max-locals=15
max-returns=6
max-branches=12
max-nested-blocks=5
max-public-methods=20
max-attributes=7
min-public-methods=2
